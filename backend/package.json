{
  "name": "ai-api-playground-backend",
  "version": "1.0.0",
  "description": "Backend API for AI API Playground",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "build": "npm run copy-config",
    "prebuild": "",
    "build:production": "npm ci --production && npm run build",
    "start:production": "NODE_ENV=production node src/app.js",
    "test": "jest",
    "test:ci": "jest --ci --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "copy-config": "mkdir -p dist && cp -r src/config dist/config 2>/dev/null || echo 'Config copy skipped'",
    "predeploy": "npm run lint && npm run test:ci",
    "postdeploy": "node scripts/health-check.js",
    "clean": "rm -rf dist logs/*.log",
    "install:all": "npm ci && cd ../frontend && npm ci",
    "setup": "bash scripts/setup-render.sh",
    "deploy": "bash scripts/deploy-backend.sh",
    "health-check": "node scripts/health-check.js",
    "optimize": "npm run build && npm run health-check",
    "logs": "tail -f logs/*.log",
    "monitor": "node backend/config/monitoring.js"
  },
  "keywords": [
    "ai",
    "api",
    "playground",
    "nodejs",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "pg": "^8.11.3",
    "@supabase/supabase-js": "^2.38.4",
    "redis": "^4.6.10",
    "rate-limiter-flexible": "^4.0.0",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "uuid": "^9.0.1",
    "axios": "^1.6.2",
    "socket.io": "^4.7.4",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "cross-env": "^7.0.3",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1"
  }
}