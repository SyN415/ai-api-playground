# Production Environment Configuration for AI API Playground
# Copy this file to .env.production and fill in your actual values
# DO NOT commit .env.production to version control

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Server Configuration
NODE_ENV=production
PORT=10000
HOST=0.0.0.0
CORS_ORIGIN=https://your-frontend-url.onrender.com

# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=postgresql://username:password@your-supabase-host:5432/ai_api_playground
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Redis Configuration (Render.com Redis)
REDIS_URL=redis://your-redis-url:6379
REDIS_PASSWORD=your-redis-password

# JWT Configuration (Generate strong secrets for production)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# API Key Encryption
API_KEY_ENCRYPTION_KEY=your-encryption-key-min-32-chars

# =============================================================================
# AI SERVICE API KEYS
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Minimax AI Configuration
MINIMAX_API_KEY=your-minimax-api-key
MINIMAX_GROUP_ID=your-minimax-group-id
MINIMAX_ENABLED=true

# =============================================================================
# MINIMAX ADVANCED SETTINGS
# =============================================================================

# API Settings
MINIMAX_API_BASE=https://api.minimax.chat/v1
MINIMAX_VIDEO_API_BASE=https://api.minimax.chat/v1
MINIMAX_API_TIMEOUT=30000
MINIMAX_MAX_RETRIES=3
MINIMAX_RETRY_DELAY=1000
MINIMAX_EXPONENTIAL_BACKOFF=true
MINIMAX_MAX_BACKOFF_DELAY=30000

# Video Generation Settings
MINIMAX_MAX_CONCURRENT_JOBS=3
MINIMAX_STATUS_CHECK_INTERVAL=5000
MINIMAX_MAX_STATUS_CHECK_ATTEMPTS=60
MINIMAX_WEBHOOK_TIMEOUT=30000

# Rate Limiting
MINIMAX_REQUESTS_PER_MINUTE=10
MINIMAX_REQUESTS_PER_HOUR=100
MINIMAX_REQUESTS_PER_DAY=1000
MINIMAX_TOKENS_PER_MINUTE=10000
MINIMAX_TOKENS_PER_HOUR=100000
MINIMAX_TOKENS_PER_DAY=1000000

# Webhook Configuration
MINIMAX_WEBHOOK_ENABLED=true
MINIMAX_WEBHOOK_SECRET=your-minimax-webhook-secret
MINIMAX_WEBHOOK_URL=https://your-backend-url.onrender.com/api/v1/webhooks/minimax

# Logging Configuration
MINIMAX_LOG_REQUESTS=true
MINIMAX_LOG_RESPONSES=true
MINIMAX_LOG_ERRORS=true
MINIMAX_LOG_HEADERS=false
MINIMAX_LOG_PAYLOAD=true
MINIMAX_MAX_LOG_PAYLOAD_SIZE=10000

# Validation Settings
MINIMAX_MAX_PROMPT_LENGTH=5000
MINIMAX_MAX_NEGATIVE_PROMPT_LENGTH=1000
MINIMAX_MAX_BATCH_SIZE=10
MINIMAX_MAX_IMAGE_SIZE=10485760
MINIMAX_MAX_VIDEO_SIZE=104857600

# Error Handling
MINIMAX_MAX_RETRY_ATTEMPTS=3
MINIMAX_CIRCUIT_BREAKER_THRESHOLD=5
MINIMAX_CIRCUIT_BREAKER_TIMEOUT=60000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_REDIS_ENABLED=true
RATE_LIMIT_STANDARD=100
RATE_LIMIT_PREMIUM=1000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_REQUESTS_TO_FILE=true
LOG_REQUESTS_TO_CONSOLE=false
REQUEST_LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ANALYTICS=true

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-min-32-chars

# API Configuration
API_VERSION=v1
API_RATE_LIMIT_ENABLED=true
API_GATEWAY_ENABLED=true

# Quota Configuration
DEFAULT_REQUESTS_PER_MINUTE=60
DEFAULT_REQUESTS_PER_HOUR=1000
DEFAULT_REQUESTS_PER_DAY=10000
DEFAULT_TOKENS_PER_MINUTE=10000
DEFAULT_TOKENS_PER_HOUR=100000
DEFAULT_TOKENS_PER_DAY=1000000
DEFAULT_CONCURRENT_REQUESTS=5

# Webhook Configuration
WEBHOOK_MAX_PER_USER=10
WEBHOOK_MAX_RETRIES=3
WEBHOOK_TIMEOUT=10000
WEBHOOK_SIGNING_ENABLED=true
WEBHOOK_SECRET=your-webhook-secret-min-32-chars

# AI Service Configuration
AI_DEFAULT_PROVIDER=minimax
AI_DEFAULT_MODEL=abab5.5-chat
AI_MAX_TOKENS=8192
AI_MAX_RETRIES=3

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_USAGE_TRACKING=true
ENABLE_MINIMAX_INTEGRATION=true

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API Configuration
REACT_APP_API_BASE_URL=https://your-backend-url.onrender.com
REACT_APP_API_VERSION=v1
REACT_APP_API_TIMEOUT=30000

# Application Configuration
REACT_APP_ENVIRONMENT=production
REACT_APP_VERSION=1.0.0
REACT_APP_NAME=AI API Playground

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_TRACKING=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_MINIMAX_ENABLED=true
REACT_APP_ENABLE_PWA=false
REACT_APP_ENABLE_LAZY_LOADING=true
REACT_APP_ENABLE_CODE_SPLITTING=true
REACT_APP_IMAGE_OPTIMIZATION=true

# UI Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_NOTIFICATION_DURATION=5000

# Minimax Configuration
REACT_APP_MINIMAX_DEFAULT_MODEL=abab5.5-chat
REACT_APP_MINIMAX_MAX_TOKENS=8192

# Rate Limiting Configuration
REACT_APP_RATE_LIMIT_WARNING_THRESHOLD=80
REACT_APP_RATE_LIMIT_ERROR_THRESHOLD=95

# Security Configuration
REACT_APP_ENABLE_CSP=true
REACT_APP_ENABLE_XSS_PROTECTION=true
REACT_APP_ENABLE_HTTPS_ONLY=true

# Build Configuration
REACT_APP_GENERATE_SOURCEMAP=false
REACT_APP_INLINE_RUNTIME_CHUNK=false
REACT_APP_IMAGE_INLINE_SIZE_LIMIT=10000

# External Services (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=
REACT_APP_LOGROCKET_ID=

# =============================================================================
# RENDER.COM SPECIFIC
# =============================================================================

# Health Check
HEALTH_CHECK_TIMEOUT=5000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090